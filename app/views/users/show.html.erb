<h3>ユーザー詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @user.start %></td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td><%= @user.created_at.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td><%= @user.allday %></td>
      </tr>
      <tr>
        <th>スケジュールメモ</th> 
        <td><%= @user.introduction %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
      </ul>
    </div>