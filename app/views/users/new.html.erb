<h3>スケジュール新規作成</h3>
 
    <%= form_for @user do |f| %>
      <table>
        <tr>
          <th><%= f.label :name ,"タイトル" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start ,"開始日" %></th>
          <td><%= f.date_field :start %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end ,"終了日" %></th>
          <td><%= f.date_field :end %></td>
        </tr>
        
        <tr>
          <th><%= f.label :allday ,"終日" %></th>
          <td><%= f.check_box :allday, {class: User},checked_value = "true",unchecked_value = "false" %></td>
        </tr>
        
        <tr>
          <th><%= f.label :introduction ,"スケジュールメモ" %></th>
          <td><%= f.text_area :introduction %></td>
        </tr>
      </table>
 
      <div>
        <ul>
          <li><%= f.submit "スケジュールを新規登録する"%></li>
          <li><%= link_to "スケジュール一覧に戻る", :users %></li>
        </ul>
      </div>
    <% end %>
